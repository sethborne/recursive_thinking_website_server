{
  "printWidth": 100,
  "singleQuote": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx"],
      "options": {
        "printWidth": 150,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "arrowParens": "always"
      }
    },
    {
      "files": ["**/*.prettierrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "embeddedLanguageFormatting": "off",
        "htmlWhitespaceSensitivity": "css",
        "insertPragma": true,
        "jsxBracketSameLine": false,
        "jsxSingleQuote": true,
        "printWidth": 300,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "vueIndentScriptAndStyle": false
      }
    }
  ]
}
